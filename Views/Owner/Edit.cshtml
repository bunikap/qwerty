@model qwerty.Models.Owner

@{
    ViewData["Title"] = "Edit";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-md-6">
                <ol class="breadcrumb ">
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="Owner" asp-action="Index">User</a></li>
                    <li class="breadcrumb-item active">Edit</li>
                </ol>
            </div>
            <div class="col-md-6">
            </div>
        </div>
    </div>
</section>

<section class="content">

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Edit User</h3>
                    </div>
                    <form asp-action="Edit">
                        <div class="card-body">
                            <input type="hidden" asp-for="Id" />
                            <div class="form-group">
                                <label asp-for="own" class="control-label"></label>
                                <input asp-for="own" class="form-control" />
                                <span asp-validation-for="own" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Department" class="control-label"></label>
                                <input asp-for="Department" class="form-control" />
                                <span asp-validation-for="Department" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="PermissionId" class="control-label"></label>
                                <select asp-for="PermissionId" class="form-control"
                                    asp-items="ViewBag.PermissionId"></select>
                                <span asp-validation-for="PermissionId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="form-group">
                                 <button type="button" class="btn btn-secondary"
                                        onclick="location.href='@Url.Action("Index", "Owner")'">Back</button>
                                <input type="submit" value="Save" class="btn btn-info" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
