@model qwerty.Models.UserPer

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>UserPer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ownerss)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ownerss.Id)
        </dd class>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Permissions)
        </dt>
        <dd class="col-sm-10">
            @foreach (var item in Model.AvailablePermission)
            {

                <div class="checkbox">
                    <label>
                   @item.Text
                    </label>
                </div>
            }
        </dd class>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>

    
</div>
