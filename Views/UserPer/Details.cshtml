                    <li class="breadcrumb-item active">Detail</li>

                </ol>
            </div>
            <div class="col-md-6">
            </div>
        </div>
    </div>
</section>





<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">User Permission Detail</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <strong> User name :</strong> <span>
                                    @Html.DisplayFor(model => model.Ownerss.own)
                                </span>
                            </div>
                            <div class="col-md-6">
                            </div>



                            <div class="col-md-4">
                                <strong>Permission </strong>
                                <div class="scrollbar pt-2">
                                    <div class="force-overflow">
                                        @foreach (var item in Model.AvailablePermission)
                                        {


                                            <div class="form-group clearfix">

                                                <div class="icheck-danger ">

                                                    <input type="checkbox" id="@item.Text" name="SelectedPermission"
                                                    value="@item.Value" checked="@item.Selected" disabled
                                                    @if(Model.SelectedPermission.Contains(item.Value)) { <text>
                                                checked </text>}/><label for="@item.Text"></label>@item.Text


                                                </div>
                                            </div>



                                        }
                                    </div>
                                </div>
                            </div>


                        </div>


                    </div>
                    <div class="card-footer">

                        <div class="form-group">
                            <button type="button" class="btn btn-secondary"
                                onclick="location.href='@Url.Action("Index", "UserPer")'">Back</button>
                         
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>








