@model qwerty.Models.Department

@{
    ViewData["Title"] = "Create";
}


<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-md-6">
                <ol class="breadcrumb ">
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="Owner" asp-action="Index">User</a></li>
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="Owner" asp-action="Create">Create</a></li>
                    <li class="breadcrumb-item active">Add Department</li>
                </ol>
            </div>
            <div class="col-md-6">
            </div>
        </div>
    </div>
</section>


<section class="content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Add Department</h3>
                    </div>
                    <form asp-action="Create">
                        <div class="card-body">

                            <div class="row">
                                <div class="col-md-4">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group">
                                        <label asp-for="department" class="control-label"></label>
                                        <input asp-for="department" class="form-control" />

                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="card-footer">

                            <div class="form-group">
                                <input type="button" class="btn btn-secondary" value="Back"
                                    onclick="location.href='@Url.Action("Create", "Owner")'" />
                                <input type="submit" value="Create" class="btn btn-create" />
                                <input type="button" class="btn btn-delete" value="Delete"
                                    onclick="location.href='@Url.Action("Index", "Department")'" />
                            </div>
                        </div>
                    </form>
                </div>



            </div>
        </div>
    </div>

</section>





</section>
@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
